{
  "name": "Node.js DevOps Alapok",
  "dockerFile": "Dockerfile",
  
  // A Dev Container indításakor lefutó parancsok: telepítjük a függőségeket.
  "postCreateCommand": "npm install",

  // Portok publikálása és automatikus megnyitása
  "appPort": "8080:8080",
  "forwardPorts": [8080],
  
    
  // Munkakönyvtár beállítása
  "workspaceFolder": "/workspace",
  
  // A felhasználó a Dev Container Dockerfile-ban lett definiálva
  "remoteUser": "devuser"
}